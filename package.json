    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.9",
    "@types/validator": "^13.12.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
