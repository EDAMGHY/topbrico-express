    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "husky": "^9.0.11",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.7",
